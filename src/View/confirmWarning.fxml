<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #D46A2E;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER">
            <children>
                <Label fx:id="warningLabel" alignment="CENTER" contentDisplay="CENTER" text="Warning Message" textFill="#ebebeb" wrapText="true" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                      <JFXButton mnemonicParsing="false" onMouseClicked="#closeApp" prefHeight="38.0" prefWidth="159.0" style="-fx-background-color: #2B5296;" text="Yes" textFill="#ebebeb">
                          <font>
                              <Font name="System Bold" size="15.0" />
                          </font>
                      </JFXButton>
                  <JFXButton fx:id="okayButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#okay" prefHeight="38.0" prefWidth="159.0" style="-fx-background-color: #2B5296;" text="Cancel" textFill="#ebebeb">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
    </padding>
</BorderPane>
